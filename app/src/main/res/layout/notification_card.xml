<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notification_card_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:elevation="4dp"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <!-- TextView for the message -->
        <TextView
            android:id="@+id/notifcation_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="This is a notification message"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"/>

        <!-- TextView for the date and time sent -->
        <TextView
            android:id="@+id/notification_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12 Aug 2024, 10:30 AM"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:gravity="end"/>

    </LinearLayout>



</LinearLayout>