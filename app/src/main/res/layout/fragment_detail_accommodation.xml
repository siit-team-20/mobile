<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.accommodation.DetailAccommodation"
    android:id="@+id/nav_accommodation_detail">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffffff">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/accommodation_detail_title"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="40sp" />
                <ImageButton
                    android:id="@+id/deleteAccommodationButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/round_border_background"
                    android:contentDescription="Delete accommodation"
                    app:srcCompat="@drawable/ic_delete"
                    android:clickable="true"/>
                <ImageButton
                    android:id="@+id/editAccommodationButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/round_border_background"
                    android:contentDescription="Edit accommodation"
                    app:srcCompat="@drawable/ic_edit"
                    android:clickable="true"/>
            </LinearLayout>
            <TextView
                android:id="@+id/accommodation_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Name"
                android:fontFamily="sans-serif-light"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/accommodation_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Description"
                android:fontFamily="sans-serif-light"
                android:textSize="20sp"/>
            <ImageView
                android:id="@+id/accommodation_image"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:srcCompat="@drawable/a"
                android:contentDescription="@string/accommodation_image" />
            <TextView
                android:id="@+id/accommodation_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Id"
                android:fontFamily="sans-serif-light"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/accommodation_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Location"
                android:fontFamily="sans-serif-light"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/accommodation_owner_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Owner email"
                android:fontFamily="sans-serif-light"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/accommodation_accommodation_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Accommodation Type"
                android:fontFamily="sans-serif-light"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/accommodation_benefits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Benefits"
                android:fontFamily="sans-serif-light"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/accommodation_approved"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Approved"
                android:fontFamily="sans-serif-light"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/accommodation_automatic_acceptance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Automatic Acceptance"
                android:fontFamily="sans-serif-light"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/accommodation_price_by_guest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Price By Guest"
                android:fontFamily="sans-serif-light"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/accommodation_min_guests"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Min guests"
                android:fontFamily="sans-serif-light"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/accommodation_max_guests"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Max guests"
                android:fontFamily="sans-serif-light"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/accommodation_reservation_cancellation_deadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Reservation Cancellation Deadline"
                android:fontFamily="sans-serif-light"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/accommodation_availability_dates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Availability Dates"
                android:fontFamily="sans-serif-light"
                android:textSize="20sp"/>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
