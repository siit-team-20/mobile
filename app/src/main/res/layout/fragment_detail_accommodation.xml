<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.accommodation.DetailAccommodation"
    android:id="@+id/nav_accommodation_detail">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffffff"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/accommodation_name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/accommodation_name"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="25sp" />
                <ImageButton
                    android:id="@+id/deleteAccommodationButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/round_border_background"
                    android:contentDescription="Delete accommodation"
                    app:srcCompat="@drawable/ic_delete"
                    android:clickable="true"/>
                <ImageButton
                    android:id="@+id/editAccommodationButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/round_border_background"
                    android:contentDescription="Edit accommodation"
                    app:srcCompat="@drawable/ic_edit"
                    android:clickable="true"/>
            </LinearLayout>
            <TextView
                android:id="@+id/accommodation_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:layout_marginHorizontal="10dp"
                android:fontFamily="sans-serif-light"
                android:textSize="20sp"/>
            <ImageView
                android:id="@+id/accommodation_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/a"
                android:contentDescription="@string/accommodation_image" />
            <TextView
                android:id="@+id/accommodation_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                android:text="Description"
                android:justificationMode="inter_word"
                android:fontFamily="sans-serif-light"
                android:textSize="20sp"/>
<!--            <LinearLayout-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:orientation="horizontal"-->
<!--                android:layout_marginTop="25dp"-->
<!--                android:layout_marginHorizontal="10dp">-->
<!--                <TextView-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="Accommodation id: "-->
<!--                    android:fontFamily="sans-serif-light"-->
<!--                    android:textSize="20sp"></TextView>-->
<!--                <TextView-->
<!--                    android:id="@+id/accommodation_id"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="Id"-->
<!--                    android:fontFamily="sans-serif-light"-->
<!--                    android:textSize="20sp"/>-->
<!--            </LinearLayout>-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Owner email: "
                    android:fontFamily="sans-serif-light"
                    android:textSize="20sp"></TextView>
                <TextView
                    android:id="@+id/accommodation_owner_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Owner email"
                    android:fontFamily="sans-serif-light"
                    android:textSize="20sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp">
                <TextView
                    android:id="@+id/accommodation_accommodation_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Accommodation type"
                    android:fontFamily="sans-serif-light"
                    android:textSize="20sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" with:"
                    android:fontFamily="sans-serif-light"
                    android:textSize="20sp"></TextView>
            </LinearLayout>
            <TextView
                android:id="@+id/accommodation_benefits"
                android:layout_width="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginHorizontal="10dp"
                android:layout_height="wrap_content"
                android:text="Benefits"
                android:fontFamily="sans-serif-light"
                android:textSize="20sp"/>
<!--            <LinearLayout-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:orientation="horizontal"-->
<!--                android:layout_marginTop="25dp"-->
<!--                android:layout_marginHorizontal="10dp">-->
<!--                <TextView-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="Approved: "-->
<!--                    android:fontFamily="sans-serif-light"-->
<!--                    android:textSize="20sp"></TextView>-->
<!--                <TextView-->
<!--                    android:id="@+id/accommodation_approved"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="Approved"-->
<!--                    android:fontFamily="sans-serif-light"-->
<!--                    android:textSize="20sp"/>-->
