<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Title -->
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create New Accommodation"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="16dp"/>

            <!-- Accommodation Name -->
            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:hint="Accommodation Name"
                android:inputType="text" />

            <!-- Location -->
            <EditText
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:hint="Location"
                android:inputType="text" />

            <!-- Description -->
            <EditText
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Description"
                android:inputType="textMultiLine"
                android:minLines="3"
                android:gravity="top"/>

            <!-- Price -->

            <!-- Image Upload Button -->

            <!-- Submit Button -->


            <TextView
                android:id="@+id/tvBenefits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Benefits"
                android:textStyle="bold"
                android:paddingTop="16dp"/>

            <EditText
                android:id="@+id/benefits"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="top"
                android:hint="Benefits (e.q.,TV,WI-FI, pool..)"
                android:inputType="textMultiLine"
                android:minLines="3" />

            <!-- Scrollable Amenities List -->


            <EditText
                android:id="@+id/minGuests"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:hint="Minimum Number of Guests"
                android:inputType="number" />

            <EditText
                android:id="@+id/maxGuests"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:hint="Maximum Number of Guests"
                android:inputType="number" />
            <TextView
                android:id="@+id/tvCancellationDeadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reservation Cancellation Deadline"
                android:textStyle="bold"
                android:paddingBottom="8dp"/>

            <!-- Reservation Cancellation Deadline EditText -->
            <EditText
                android:id="@+id/cancellationDeadline"
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:hint="Enter deadline "
                android:importantForAccessibility="yes"
                android:inputType="text" />
            <TextView
                android:id="@+id/tvAccommodationType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accommodation Type"
                android:textStyle="bold"
                android:paddingTop="16dp"/>

            <!-- Accommodation Type RadioGroup -->

            <RadioGroup
                android:id="@+id/accommodationType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- RadioButton for Studio -->
                <RadioButton
                    android:id="@+id/rbStudio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Studio"/>

                <!-- RadioButton for Room -->

                <!-- RadioButton for Apartment -->
                <RadioButton
                    android:id="@+id/rbRoom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Room" />

                <RadioButton
                    android:id="@+id/rbApartment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Apartment"/>

                <!-- RadioButton for House -->
                <RadioButton
                    android:id="@+id/rbHouse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="House"/>

                <!-- Add more RadioButtons as needed -->

            </RadioGroup>
            <CheckBox
                android:id="@+id/automaticAcceptance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Automatic Acceptance"/>

            <CheckBox
                android:id="@+id/pricePerGuest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price Per Guest"/>
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Availability Start Date -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="8dp">

                    <TextView
                        android:id="@+id/tvAvailabilityStart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Availability start"
                        android:textStyle="bold"
                        android:paddingBottom="4dp"/>

                    <EditText
                        android:id="@+id/etAvailabilityStart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Select date"
                        android:inputType="date"></EditText>

                    <TextView
                        android:id="@+id/tvAvailabilityStartError"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="This input is not valid!"
                        android:textColor="@android:color/holo_red_light"
                        android:visibility="gone"
                        android:paddingTop="4dp"/>
                </LinearLayout>

                <!-- Availability End Date -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="8dp">

                    <TextView
                        android:id="@+id/tvAvailabilityEnd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Availability end"
                        android:textStyle="bold"
                        android:paddingBottom="4dp"/>

                    <EditText
                        android:id="@+id/etAvailabilityEnd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Select date"
                        android:inputType="date"/>

                    <TextView
                        android:id="@+id/tvAvailabilityEndError"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="This input is not valid!"
                        android:textColor="@android:color/holo_red_light"
                        android:visibility="gone"
                        android:paddingTop="4dp"/>
                </LinearLayout>

                <!-- Price -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="8dp">

                    <TextView
                        android:id="@+id/tvPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price"
                        android:textStyle="bold"
                        android:paddingBottom="4dp"/>

                    <EditText
                        android:id="@+id/etPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Price"
                        android:inputType="numberDecimal"
                        android:importantForAccessibility="yes"
                        android:contentDescription="Price input field"/>

                    <TextView
                        android:id="@+id/tvPriceError"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="This input is not valid!"
                        android:textColor="@android:color/holo_red_light"
                        android:visibility="gone"
                        android:paddingTop="4dp"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Placeholder for dynamic availability ranges -->
                <LinearLayout
                    android:id="@+id/availabilityRangesContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"/>

                <!-- Button to add new availability range -->
                <Button
                    android:id="@+id/btnAddNewDateRange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+ Add new availability range"
                    android:textColor="@android:color/holo_blue_light"
                    android:layout_marginTop="16dp"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:layout_marginTop="24dp"
                android:text="Create Accommodation" />

            <Button
                android:id="@+id/btnSubmitChanges"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Save changes" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
