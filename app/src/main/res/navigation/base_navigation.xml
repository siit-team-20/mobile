            app:argType="integer" />
        <argument
            android:name="maxGuests"
            app:argType="integer" />
        <argument
            android:name="reservationCancellationDeadline"
            app:argType="integer" />
        <argument
            android:name="availabilityDates"
            app:argType="com.bookingapp.model.DateRange[]" />
    </fragment>


